<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="3dp"
    app:cardCornerRadius="5dp"
    app:cardElevation="5dp"
    android:clickable="true"
    app:cardBackgroundColor="@color/colorPrimary"
    android:foreground="?selectableItemBackground">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_margin="10dp"
        android:gravity="center">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">


            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="3"
                android:orientation="vertical">

                <de.hdodenhof.circleimageview.CircleImageView
                    xmlns:app="http://schemas.android.com/apk/res-auto"
                    android:id="@+id/mSenderImage"
                    android:layout_width="match_parent"
                    android:layout_height="110dp"
                    android:textStyle="bold"
                    android:gravity="center"
                    android:src="@drawable/default_person_logo"
                    android:scaleType="centerCrop"
                    android:textColor="@color/red"
                    app:civ_border_color="#ffffff"
                    app:civ_border_width="2dp" />

                <TextView
                    android:id="@+id/requestDateId"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textAlignment="center"
                    android:fontFamily="@font/roboto_regular"
                    android:textColor="@color/white"
                    android:text="20 Sep 2018"/>

            </LinearLayout>



            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="7"
                android:layout_gravity="center"
                android:paddingLeft="10dp"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:orientation="horizontal"
                    android:layout_height="wrap_content">


                    <TextView
                        android:id="@+id/mRequestSenderName"
                        android:layout_width="match_parent"
                        android:textSize="17dp"
                        android:layout_weight=".45"
                        android:textStyle="bold"
                        android:maxLines="1"
                        android:fontFamily="@font/roboto_regular"
                        android:textColor="@color/white"
                        android:text="Nipon"
                        android:layout_height="wrap_content" />


                    <TextView
                        android:id="@+id/durationTV"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textAlignment="center"
                        android:layout_weight=".55"
                        android:maxLines="2"
                        android:layout_marginLeft="10dp"
                        android:fontFamily="@font/roboto_regular"
                        android:textColor="@color/white"
                        android:text="00:00:00s"/>

                </LinearLayout>


                <TextView
                    android:id="@+id/mRequestSenderInfo"
                    android:gravity="left"
                    android:layout_height="fill_parent"
                    android:layout_width="match_parent"
                    android:maxLines="2"
                    android:fontFamily="@font/roboto_regular"
                    android:textColor="@color/white"
                    android:textStyle="bold"
                    />



                <TextView
                    android:id="@+id/mVehicleNumber"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:maxLines="2"
                    android:fontFamily="@font/roboto_regular"
                    android:text="Vehicle Number: Cha-15642 DMC"
                    android:textColor="@color/white"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/phoneNumberTV"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="6"
                        android:layout_gravity="center"
                        android:textStyle="bold"
                        android:fontFamily="@font/roboto_regular"
                        android:textColor="@color/white"
                        android:gravity="left|center"
                        android:text="017xxxxxxxx"/>
                    <Button
                        android:id="@+id/callButton"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:background="@drawable/ic_call_icon"
                        android:backgroundTint="@color/white"
                        android:layout_gravity="center" />
                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_gravity="bottom"
                    android:gravity="right">

                    <Button
                        android:id="@+id/mAcceptButton"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:textAllCaps="false"
                        android:fontFamily="@font/roboto_regular"
                        android:textColor="@color/white"
                        android:backgroundTint="@color/dark_green"
                        android:text="Start"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="25dp"
                        android:textSize="10sp"
                        android:id="@+id/status_id"
                        android:textStyle="bold"
                        android:clickable="false"
                        android:textAlignment="center"
                        android:gravity="center"
                        android:enabled="false"
                        android:maxLines="1"
                        android:layout_gravity="center_vertical"
                        android:text="PENDING"
                        android:textColor="@color/white"
                        android:fontFamily="@font/roboto_regular"
                        android:background="@drawable/all_side_border" />

                </LinearLayout>

            </LinearLayout>






        </LinearLayout>

    </LinearLayout>



</android.support.v7.widget.CardView>
