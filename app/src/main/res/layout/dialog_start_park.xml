<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <LinearLayout
        android:id="@+id/titleLayout"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/title"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_weight="30"
            android:text="Park Place Information"
            android:fontFamily="@font/josefinsans_regular"
            android:textColor="@color/white"
            android:gravity="center"
            android:textStyle="bold"
            android:textSize="20dp"
            android:background="@color/colorAccent"/>


        <Button
            android:id="@+id/mCancelButton"
            android:layout_width="30dp"
            android:layout_height="match_parent"
            android:text="X"
            android:textSize="20dp"
            android:background="@color/red"
            android:textStyle="bold"
            android:fontFamily="@font/josefinsans_regular"
            android:textColor="@color/white"
            android:visibility="gone"
            android:layout_weight="1"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/basicInfo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/titleLayout"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/mUserProfilePicture"
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:layout_margin="5dp"
            android:background="@drawable/profile"
            android:layout_gravity="center_vertical"
            tools:layout_editor_absoluteX="0dp"
            android:scaleType="centerCrop"
            tools:layout_editor_absoluteY="50dp" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:gravity="center_vertical">

                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:src="@drawable/ic_user_icon"
                    android:layout_marginRight="5dp"
                    />
                <TextView
                    android:id="@+id/mUserName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="left"
                    android:textSize="18dp"
                    android:fontFamily="@font/josefinsans_regular"
                    android:text="Aqib Mehedi"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:gravity="center_vertical">

                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:src="@drawable/ic_vehicle_car"
                    android:layout_marginRight="5dp"
                    />
                <TextView
                    android:id="@+id/mVehicleNumber"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/josefinsans_regular"
                    android:gravity="left"
                    android:textSize="18dp"
                    android:text="CHA 1456 DMC"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:gravity="center_vertical">

                <ImageView
                    android:id="@+id/mCallIcon"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:src="@drawable/ic_phone_icon"
                    android:layout_marginRight="5dp"
                    />
                <TextView
                    android:id="@+id/mPhoneNumber"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="left"
                    android:textSize="18dp"
                    android:fontFamily="@font/josefinsans_regular"
                    android:text="017777818880"/>
            </LinearLayout>



        </LinearLayout>



    </LinearLayout>


    <LinearLayout
        android:id="@+id/durationLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_below="@id/basicInfo">

        <ImageView
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_gravity="center_vertical"
            android:background="@drawable/ic_stopwatch_icon" />

        <TextView
            android:id="@+id/durationTV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="50dp"
            android:gravity="center"
            android:fontFamily="@font/josefinsans_regular"
            android:text="00:00:00s"/>



    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/durationLayout"
        android:orientation="horizontal">





        <Button
            android:id="@+id/mStartButton"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:text="Start"
            android:textStyle="bold"
            android:background="@color/colorPrimary"
            android:fontFamily="@font/josefinsans_regular"
            android:textColor="@color/white"
            android:layout_weight="1"/>


        <Button
            android:id="@+id/mEndButton"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:text="END"
            android:textStyle="bold"
            android:background="@color/colorPrimary"
            android:fontFamily="@font/josefinsans_regular"
            android:textColor="@color/white"
            android:visibility="gone"
            android:layout_weight="1"/>


    </LinearLayout>








</RelativeLayout>